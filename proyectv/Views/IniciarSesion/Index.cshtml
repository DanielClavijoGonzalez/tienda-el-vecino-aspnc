<environment names="Development">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://kit.fontawesome.com/3f88322c46.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/stye1.css" />
    <script src="~/js/custom.js"></script>
    <script>let nombre = "@ViewData["nombre"]";</script>
</environment>
<!--Horizontal navbar-->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="padding-bottom: 1%;padding-top: 1%;">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Tienda del vecino</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/IniciarSesion">Iniciar Sesión</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/RegistrarUsuario">Registrarse</a>
                </li>
            </ul>
            <span class="navbar-text text-info ml-auto">
                La tienda de la esquina vende muy caro, en cambio la del vecino anda todo barato :)
            </span>
        </div>
    </div>
</nav>
<div class="d-block" style="margin-left: 25%;margin-right: 25%;margin-top: 4%;">
    @if (ViewData["estado_registro"].ToString() != "")
    {<p class="d-block text-center" role="alert"><p class="text-danger text-center mx-auto">@ViewData["estado_registro"]</p></p>}
    <form action="/IniciarSesion/Select" method="post">
        <div class="row justify-content-center">
            <div class="card p-4 bg-dark" style="width: 28rem;">
                <!--USUARIO-->
                <div class="form-group">
                    <label class="text-light">Correo</label>
                    <input type="email" name="email" class="form-control" autofocus="autofocus" required>
                </div>
                <div class="form-group">
                    <label class="text-light">Contraseña</label>
                    <input type="password" name="Password" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-danger">Iniciar Sesion</button>
            </div>
        </div>
    </form>
</div>
<footer class="text-white bg-dark p-4" style="position: fixed;width: 100%;top: 89%;">
    <p class="text-center my-auto">Tienda del vecino by Equipo JED. Licencia <a class="text-warning" href="https://es.wikipedia.org/wiki/Licencia_MIT">MIT</a></p>
</footer>