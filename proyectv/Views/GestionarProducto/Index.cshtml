@if (!string.IsNullOrEmpty(ViewBag.messaged))
{
    <script type="text/javascript">
        alert("@ViewBag.messaged");
    </script>
}
@if (!string.IsNullOrEmpty(ViewBag.error))
{
    <script type="text/javascript">
        alert("@ViewBag.error");
    </script>
}
@*System HTML Embed*@
<environment names="Development">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://kit.fontawesome.com/3f88322c46.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/stye1.css" />
    <script src="~/js/custom.js"></script>
    <script>let nombre = "@ViewData["nombre"]";</script>
</environment>
<!--Horizontal navbar-->
<nav class="navbar navbar-dark bg-dark">
    <div class="navbar-brand" href="#">
        <!-- Toggle button -->
        <button id="sidebarCollapse" type="button" class="btn btn-dark px-3">
            <i class="fa fa-bars mr-2"
               style="font-size: 30px;"></i><small class="text-uppercase font-weight-bold"> </small>
        </button>
    </div>
    <img src="/img/profilesimg/@ViewData["imagen_perfil"]"
         width="50" height="50" style="min-height: 50px; max-height: 50px;min-width: 50px; max-width: 50px;" class="mr-3 rounded-circle img-thumbnail shadow-sm img-fluid" alt="" loading="lazy">
</nav>
<!--End horizontal navbar-->
<!-- Vertical navbar -->
<div class="vertical-nav bg-dark" id="sidebar">
    <div class="py-4 px-3 mb-4 bg-dark">
        <div class="media d-flex align-items-center">
            <img src="/img/profilesimg/@ViewData["imagen_perfil"]"
                 alt="Foto de perfil" height="63" width="63" style="min-height: 63px; max-height: 63px;min-width: 63px; max-width: 63px;" class="mr-3 rounded-circle img-thumbnail shadow-sm img-fluid">
            <div class="media-body">
                <h4 id="DBNombre2" class="m-0 text-light">
                    <script>if (nombre.indexOf(" ") == -1) { document.getElementById("DBNombre2").innerHTML = nombre.substring(-1, 8); } else { document.getElementById("DBNombre2").innerHTML = nombre.substring(-1, 8) + "."; }</script>
                </h4>
                <p class="font-weight-light text-muted mb-0">Comprador</p>
            </div>
        </div>
    </div>

    <p class="text-gray bg-dark font-weight-bold text-uppercase px-3 small pb-4 mb-0">Productos</p>

    <ul class="nav flex-column bg-white mb-0">
        <li class="nav-item">
            <a href="/Cliente" class="nav-link text-light font-italic bg-dark">
                <i class="fa fa-store mr-3 text-primary fa-fw"></i>
                Comprar
            </a>
        </li>
        <li class="nav-item">
            <a href="/CarritoActual" class="nav-link text-light font-italic bg-dark">
                <i class="fa fa-shopping-cart mr-3 text-primary fa-fw"></i>
                Mi carrito
            </a>
        </li>
        <li class="nav-item">
            <a href="/MisProductos" class="nav-link text-light bg-dark font-italic">
                <i class="fa fa-shopping-bag mr-3 bg-dark text-primary fa-fw"></i>
                Adquiridos
            </a>
        </li>
    </ul>

    <p class="text-gray font-weight-bold text-uppercase px-3 small py-4 mb-0">Perfil</p>

    <ul class="nav flex-column bg-dark mb-0">
        <li class="nav-item">
            <a href="/CambiarFotoPerfilC" class="nav-link text-light bg-dark font-italic">
                <i class="fa fa-id-badge mr-3 text-primary fa-fw"></i>
                Cambiar foto
            </a>
        </li>
        <li class="nav-item">
            <a href="/CambiarCorreoC" class="nav-link text-light bg-dark font-italic">
                <i class="fa fa-envelope mr-3 text-primary fa-fw"></i>
                Cambiar correo
            </a>
        </li>
        <li class="nav-item">
            <a href="/CambiarContrasenaC" class="nav-link text-light bg-dark font-italic">
                <i class="fa fa-lock mr-3 text-primary fa-fw"></i>
                Cambiar contraseña
            </a>
        </li>
        <li class="nav-item">
            <a href="/Logout" class="nav-link text-light bg-info font-italic">
                <i class="fa fa-sign-out mr-3 text-black-50 fa-fw"></i>
                Cerrar sesión
            </a>
        </li>
    </ul>
</div>
<!-- End vertical navbar -->
<!-- Page content holder -->
<div class="page-content p-5 text-black" id="content">
    <div class="row row-cols-1 row-cols-md-3">
        @*initcard*@
        <div class="card mb-3 mx-auto p-3" style="max-height: 472px;min-width: 100%;">
            <img src="/img/productsimg/@ViewData["imagen_producto"]" class="card-img-left" height="330" width="330" alt="@ViewData["nombre_producto"]">
            <p class="pt-2 text-center" style="width: 330px;"><small class="text-muted">Unidades disponibles: <b>@ViewData["cantidad_producto"]</b></small></p>
            <div class="card-body position-relative" style="top: -351px;right: -60%;width: 37%;">
                <h2 class="card-title text-center">@ViewData["nombre_producto"]</h2>
                <hr>
                <h6 class="card-subtitle text-center"><b>Precio:</b> $@ViewData["precio_producto"]</h6>
                <hr>
                <h6 class="text-center"><b>Descripción: </b></h6>
                <p class="card-text text-center">@ViewData["descripcion_producto"]</p>
                <hr>
                <b style="float: left;width: 45%;padding: 10px 0 18px 0;" class="card-subtitle text-center">Unidades:</b>
                <input type="number" id="inputQuantity" min="1" max="@ViewData["cantidad_producto"]" class="form-control mb-2 text-center" name="idproducto" value="1" required style="float: right;width: 45%;">
                <a class="btn btn-info" href="/Cliente" style="width: 45%;float: left;">Regresar</a>
                <a class="btn btn-success text-light" id="AddCarrito" onclick="window.location.href='/AddCarrito?id=@ViewData["id_producto"]&qnt='+document.getElementById('inputQuantity').value;" style="float: right;width: 45%;">Añadir al carrito</a>
            </div>
        </div>
    </div>

    @*endcard*@
</div>
<!-- End demo content -->
@*EndSystem HTML Embed*@